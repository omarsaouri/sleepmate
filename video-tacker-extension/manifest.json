{
  "manifest_version": 3,
  "name": "Video Watch Tracker",
  "version": "1.0",
  "description": "Tracks watch time on YouTube and Netflix videos.",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["https://www.youtube.com/*", "https://www.netflix.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://www.netflix.com/*"],
      "js": ["content.js"]
    }
  ]
}
